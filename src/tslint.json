{
//     //"extends": "tslint:recommended",
// 	//"rulesDirectory": ["path/to/custom/rules/directory/", "another/path/"],
    "rules": {
        "max-line-length": {
            "options": [140]
		},
		"semicolon": true,
        "quotemark": [true,
            "double",
            "avoid-escape"
		],
		"prefer-template": true,
		"whitespace": [true, "check-branch", "check-decl"],
		"comment-format": [true, "check-space", { "ignore-words": "html"  }],
		"triple-equals": [true, "allow-null-check", "allow-undefined-check"],
		"use-isnan": true,
		"indent": [true, "tabs"],
		"no-switch-case-fall-through": true,
		"no-var-keyword": true,
        "new-parens": true,
        "no-arg": true,
        "no-conditional-assignment": true,
		"no-consecutive-blank-lines": false,
		"no-debugger": true,
		"curly": true,
		"no-construct": true,
		"no-duplicate-variable": true,
		"no-eval": true,
		"space-before-function-paren": false,
		"one-line": [true, "check-else", "check-open-brace", "check-whitespace"],
        "no-console": {
            "severity": "default",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        }
	}
}
